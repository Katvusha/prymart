<div class="trend-items">
  <h2>Trending Gift Cards</h2>
  <ol>
    <% @products.each do |product| %>
        <li class="d-none"><%= link_to product.name, product %></li>
    <% end %>
  </ol>

  <div id="carouselExampleControls" class="container carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @subcategories.each_slice(4).with_index do |subcategories, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <div class="d-flex justify-content-evenly w-100">
            <% subcategories.each do |sub| %>
              <%= link_to(sub) do %>
                <div class="card-background">
                  <%= image_tag(sub.card_image) %>
                  <p class="category"><%= sub.name %></p>
                </div>
              <% end %>
            <% end %>
            <div class="card-background">
              <%= link_to image_tag('amazon.jpg'), "#" %>
              <div>
                <p class="category">Amazon</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
        <div class="carousel-item">
          <div class="d-flex justify-content-evenly w-100">
            <div class="card-background">
              <%= link_to image_tag('ea.jpg'), "#" %>
              <p class="category">Electronic Arts</p>
            </div>
            <div class="card-background">
              <%= link_to image_tag('razergold.jpg'), "#" %>
              <p class="category">Razer Gold</p>
            </div>
            <div class="card-background">
              <%= link_to image_tag('playstation.jpg'), "#" %>
              <p class="category">PlayStation</p>
            </div>
            <div class="card-background">
              <%= link_to image_tag('riot.jpg'), "#" %>
              <p class="category">Riot Points</p>
            </div>
          </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>


<div class="trend-items">
  <h2>All Product</h2>
</div>
<div class="container">
    <div class="row row-cols-4 justify-content-evenly w-100">
    <% @products.first(10).each do |prod| %>
