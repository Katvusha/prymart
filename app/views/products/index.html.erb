<div>
  <div id="navbar">
    <%= image_tag("logo.png", height:105, :class => "icon-image") %>
    <div class="search-container">
      <form action="/index">
        <input type="text" placeholder="Search" name="search">
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </div>
  </div>
  <div class="screen-container items-center">
    <div class="text-weight-bold" style="line-height: 1; font-size: 48px;">
          The Lich King returns!
    </div>
    <div class="text-h6 q-mt-lg">
          WOW Classic Gold
    </div>
    <div class="q-mt-lg row q-col-gutter-x-md q-col-gutter-x-md-none q-gutter-x-md-md">
      <div class="">
        <a type="button" href="#" class="q-btn q-btn-item non-selectable no-outline full-width q-btn--outline q-btn--rectangle q-btn--actionable q-focusable q-hoverable q-btn--no-uppercase q-btn--wrap">
          <span class="q-btn__wrapper col row q-anchor--skip">
            <span class="q-btn__content text-center col items-center q-anchor--skip justify-center row">
              <button type="button" class="btn btn-outline-secondary">Buy now!</button>
            </span>
          </span>
        </a>
      </div>
    </div>
    <%= image_tag("wowlogo.png", height:300, :class => "banner-image") %>
  </div>
  <div>
    <h1>Trending Items</h1>
      <ol>
      <% @products.each do |product| %>
        <li><%= link_to product.name, product %></li>
      <% end %>
      </ol>
  </div>

</div>
