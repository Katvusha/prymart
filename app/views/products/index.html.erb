        <%= link_to product_path(prod), style: "text-decoration: none;" do %>
        <div class="card" style="width: 250px; height: 270px; margin-top: 20px; border-radius: 10px;">
          <%= image_tag(prod.image_card, class: "card-img-top image-card", style: "width: 280; height: 180px; object-fit: cover; border-radius: 10px, 10px , 0, 0;") %>
          <div class="card-body">
            <p style="color: black;"><%= prod.name %></p>
            <p style="color: black;">$<%= prod.price %></p>
