<div class="devise-container" style="height:400px;">
  <div class="container">
      <div class="grid">
        <div class="col-6 mx-auto">
          <div class="form">
            <%= simple_form_for(@product) do |f| %>
            <br>

            <div class="bg-white text-weight-medium mt-5 p-3" style="border-radius: 15px; border: solid 1px F5F5D; box-shadow: 0 3px 10px rgb(0 0 0 / 0.3);">

              <div class="text-center">
                <br>
                <br>
                <h4>List an item for sale:</h4>
                <h5></h5>
                <br>
              </div>

              <div class="form-inputs" style= "height: 500px;">
                <div class="mb-3" style="margin: 0 2rem">
                  <%= f.input :name %>
                </div>
                <div class="mb-3" style="margin: 0 2rem">
                  <%= f.input :price %>
                </div>
                <div class="mb-3" style="margin: 0 2rem">
                  <%= f.association :subcategory %>
                </div>
                <div class="mb-3" style="margin: 0 2rem">
                  <%= f.input :quantity %>
                </div>

                <br>

                <div class="form-actions text-center" style="margin: 0 2rem">
                  <%= link_to "Return", products_path, class: "btn btn-outline-secondary", style: "margin-left: 10px; margin-right: 35px; width: 175px; height: 40px; border-radius: 5px;" %>
                  <%= f.button :submit, "Submit", class: 'btn text-white', style: "width: 175px; height: 40px; border-radius: 5px; background-color: #f03827;" %>
                </div>

              </div>

            </div>

            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
