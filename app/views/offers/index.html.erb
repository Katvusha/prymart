<div class="container pt-2">
  <div class="d-flex p-3">
    <h3>Offers List</h3>
  </div>
</div>
    <div class="container">
      <div class="d-flex p-3">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th colspan="10">ID</th>
              <th colspan="10">Product</th>
              <th colspan="10">Status</th>
              <th colspan="10">Price</th>
              <th colspan="10"></th>
            </tr>
          </thead>

        <tbody>
          <% @offers.each_with_index do | offer, index | %>
            <tr>
              <td colspan="10"><%= index + 1 %></td>
              <td colspan="10"><%= offer.product.name %></td>
              <td colspan="10"><%= offer.status %></td>
              <td colspan="10">S$ <%= sprintf('%.2f', offer.product.price) %></td>
              <td colspan="10">
                <%= form_for(offer) do |f| %>
                  <div class ="mx-10 px-10">
                    <%= f.submit 'Accepted', class: "btn btn-sm", style: "margin-left: 5px; background-color: #2dbdb4; color: white; border-radius: 10px" %>
                    <%= f.submit 'Rejected', class: "btn btn-sm", style: "margin-left: 5px; background-color: #f03826; color: white; border-radius: 10px" %>
                <% end %>
                </div>
              </td>
            </tr>
          <% end %>
      </tbody>
      </table>
      </div>
      <%= link_to "Back", products_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
